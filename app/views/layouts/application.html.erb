<!DOCTYPE html>
<html>
  <head>
    <title>Oddly-Specific</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="header-nav">
        <h1 class="header-logo">
          <a href="#">Oddly-Specific</a>
        </h1>
        <ul class="nav-links">
          <li>Notifications</li>
          <li>Profile</li>
          <li>Settings</li>
          <% if !current_user.nil? %>
          <li>Logged in as: <%= current_user.username %></li>
          <li><%= link_to 'Logout', logout_url, method: :delete %></li>
          <li><%= link_to "Edit Profile", edit_user_url(@user) %></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  
  </body>
</html>
