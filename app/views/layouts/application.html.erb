<!DOCTYPE html>
<html>
  <head>
    <title>Oddly-Specific</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
  
  
            <div class="col-md-6">

              <%= link_to 'Oddly Specific', feed_url, class: 'navbar-brand' %>

            </div>
  
            <div class="col-md-6">
  
              <ul class="navbar-nav mr-auto justify-content-end">
                
                <% unless current_user %>
                  <li class="nav-item">
                    <%= link_to "Sign up", signup_url, class: 'nav-link' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Log in", login_url, class: 'nav-link' %>
                  </li>
                <% else %>
                  <li class="nav-item">
                      <%= link_to "#{current_user.username}", user_url(current_user), class: 'nav-link' %>
                  </li>
                  <li class="nav-item">
                    <%= link_to "Log out", logout_url, method: 'delete', class: 'nav-link' %>
                  </li>
                <% end %>

              </ul>

            </div>
          </div> 
        </div>
      </nav>  
    </header>
    
    <%= yield %>
  
  </body>
</html>

      