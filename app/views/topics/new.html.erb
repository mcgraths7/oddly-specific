<div class="container">
  <h2>New Topic</h2>

  <%= form_for :topic, method: 'post', url: topics_url do |f| %>
    
    <div class="row">
    
      <div class="col-md-6">
    
        <div class="form-group">
          <%= f.label :title  %>
          <%= f.text_field :title, class: 'form-control', autofocus: true %>
        </div>
    
      </div>

    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Create topic", class: 'btn btn-primary' %>
    </div>

  <% end %>
  
</div>