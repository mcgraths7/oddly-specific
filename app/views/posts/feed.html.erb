<div class="container">
  <div class="d-flex justify-content-center"><h2>Feed</h2></div>
  <div class="row">
    
    <% @paginated_feed_posts.each do |post| %>
    <div class="col-md-1">
      <p>
        <a href="<%= upvote_post_url(post) %>">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-1 0V4a.5.5 0 0 1 .5-.5z"/>
            <path fill-rule="evenodd" d="M7.646 2.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8 3.707 5.354 6.354a.5.5 0 1 1-.708-.708l3-3z"/>
          </svg>
        </a>
      </p>
      <p><%= post.karma %></p>
        <a href="<%= downvote_post_url(post) %>">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4.646 9.646a.5.5 0 0 1 .708 0L8 12.293l2.646-2.647a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 0 1 0-.708z"/>
            <path fill-rule="evenodd" d="M8 2.5a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-1 0V3a.5.5 0 0 1 .5-.5z"/>
          </svg>
        </a>
      </p>
    </div>
    <div class="col-md-8">
      <h3><%= link_to "#{post.title}", post_url(post) %></h3>
      <% if post.url %>
        <small><%= post.url %></small>
      <% end %>
      <p><%= post.short_content %></p>
      <span class="badge">Posted <%= post.readable_timestamp(post.created_at) %>  
          by <%= link_to post.author_username, user_url(post.author) %> to 
          <%=link_to post.topic_title, topic_url(post.topic) %>
      </span>
    </div>
    <div class="col-md-3"></div>
    <% end %>
  </div>
  <nav aria-label="Feed Navigation">

    <div class="row">

      <div class="col-md-6">

        <ul class="pagination pagination-lg justify-content-left">
          <li class="page-item"><%= link_to_previous_page @paginated_feed_posts, 'Previous Page' %></li>
        </ul>
      
      </div>
      
      <div class="col-md-6">
      
        <ul class="pagination pagination-lg justify-content-end">
          <li class="page-item"><%= link_to_next_page @paginated_feed_posts, 'Next Page' %></li>
        </ul>
      
      </div>
    </div>
  </nav>
</div>
