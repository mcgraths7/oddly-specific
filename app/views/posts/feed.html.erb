<div class="container">
  <div class="d-flex justify-content-center"><h2>Feed</h2></div>
  <div class="row">
    
    <% @paginated_feed_posts.each do |post| %>
    <div class="col-md-1 justify-content-end">
      <p>
        <a href="<%= upvote_post_url(post) %>">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-up-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 8.354a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 6.207V11a.5.5 0 0 1-1 0V6.207L5.354 8.354z"/>
          </svg>
        </a>
      </p>
      <p><%= post.karma %></p>
      <p>
        <a href="<%= downvote_post_url(post) %>">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-down-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 5a.5.5 0 0 0-1 0v4.793L5.354 7.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 9.793V5z"/>
        </svg>
        </a>
      </p>
    </div>
    <div class="col-md-8">
      <h3><%= link_to "#{post.title}", post_url(post) %></h3>
      <% if post.url %>
        <small><%= post.url %></small>
      <% end %>
      <p class="lead"><%= post.short_content %></p>
      <span class="badge">Posted <%= post.readable_timestamp(post.created_at) %>  
          by <%= link_to post.author_username, user_url(post.author) %> to 
          <%=link_to post.topic_title, topic_url(post.topic) %>
      </span>
    </div>
    <div class="col-md-3"></div>
    <% end %>
  </div>
  <nav aria-label="Feed Navigation">

    <div class="row">

      <div class="col-md-6">

        <ul class="pagination pagination-lg justify-content-left">
          <li class="page-item"><%= link_to_previous_page @paginated_feed_posts, 'Previous Page' %></li>
        </ul>
      
      </div>
      
      <div class="col-md-6">
      
        <ul class="pagination pagination-lg justify-content-end">
          <li class="page-item"><%= link_to_next_page @paginated_feed_posts, 'Next Page' %></li>
        </ul>
      
      </div>
    </div>
  </nav>
</div>
